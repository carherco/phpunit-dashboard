<div class="card card-danger">
    <div class="card-header">
        <h4 class="card-title w-100">
            <a class="d-block w-100 collapsed" data-toggle="collapse" href="#collapse{{ testCase.id }}" aria-expanded="false">
                <div>{{ testCase.class }} - {{ testCase.name }}</div>
                <small class="small">{{ testCase.failureType }}</small>
            </a>
        </h4>
    </div>
    <div id="collapse{{ testCase.id }}" class="collapse" data-parent="#accordion" style="">
        <div class="card-body">
            <pre>{{ testCase.message }}</pre>
        </div>
    </div>
</div>